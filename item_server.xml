<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serverCardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#2C3E50"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ping Indicator -->
        <View
            android:id="@+id/pingIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="16dp"
            android:background="#4CAF50" />

        <!-- Server Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/serverPing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 ms"
                    android:textColor="#4FC3F7"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#B0BEC5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/serverLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% load"
                    android:textColor="#B0BEC5"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Selection Indicator -->
        <ImageView
            android:id="@+id/selectedIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_check"
            android:tint="#4FC3F7"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
